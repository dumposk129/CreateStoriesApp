<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dumposk129.create.stories.app">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="ANDROID.PERMISSION.ACCESS_NETWORK_STATE" />


    <!--<supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:requiresSmallestWidthDp="600"
        android:resizeable="true"
        android:smallScreens="false"
        android:xlargeScreens="true" />-->


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        android:allowClearUserData="true"
        android:process="com.d">
        
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />

        <!-- Quizzes Menu-->
        <activity
            android:name=".quizzes.Quizzes"
            android:label="@string/title_activity_quizzes" />
        <activity
            android:name=".quizzes.NumberOfQuestion"
            android:label="@string/title_activity_num_of_questions" />
        <activity
            android:name=".quizzes.Questions"
            android:label="@string/title_activity_question" />
        <activity
            android:name=".quizzes.Answers"
            android:label="@string/title_activity_answer" />
        <activity
            android:name=".quizzes.AllQuestions"
            android:label="@string/title_activity_show_questions" />

        <!-- Watches -->
        <activity
            android:name=".watch.ShowStories"
            android:label="@string/title_activity_select_story">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".watch.Watch"
            android:label="@string/title_activity_watches" />

        <!-- Create Stories -->
        <activity
            android:name=".create_stories.StoryName"
            android:label="@string/title_activity_creates" />
        <activity
            android:name=".create_stories.SelectBackground"
            android:label="@string/title_activity_select_bg" />
        <activity
            android:name=".create_stories.PhotoBackground"
            android:label="@string/title_activity_select_bg" />
        <activity
            android:name=".create_stories.SelectCharacter"
            android:label="@string/title_activity_select_char" />
        <activity
            android:name=".create_stories.PhotoCharacter"
            android:label="@string/title_activity_select_char" />
        <activity
            android:name=".create_stories.MoveImageFromGallery"
            android:label="@string/title_activity_combine_char_from_gal"/>
        <activity
            android:name=".create_stories.AddText"
            android:label="title_activity_add_text" />
        <activity
            android:name=".create_stories.AudioRecording"
            android:label="@string/title_activity_audio_record" />
    </application>
</manifest>