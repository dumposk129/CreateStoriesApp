<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dumposk129.create.stories.app" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Write"
            android:label="@string/app_name" />
        <activity
            android:name=".AudioRecord"
            android:label="@string/app_name" />
        <activity
            android:name=".Charactor_Show"
            android:label="@string/app_name" />
        <activity
            android:name=".CreateStory"
            android:label="@string/app_name" />
        <activity
            android:name=".ReadsFragment"
            android:label="@string/title_activity_reads_fragment" />
        <activity
            android:name=".CreatesFragment"
            android:label="@string/title_activity_creates_fragment" />
        <activity
            android:name=".QuizFragment"
            android:label="@string/title_activity_questionnaires_fragment" />
        <activity
            android:name=".SettingsFragment"
            android:label="@string/title_activity_settings_fragment" />
    </application>

</manifest>
