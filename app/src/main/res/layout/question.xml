<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:paddingBottom="40dp">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    //Question
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtQuestion"
            android:layout_gravity="center_horizontal"
            android:hint="What is question?"
            android:textSize="40sp"
            android:layout_weight="0.06" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">

            //Answer 1
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/textAnswer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="answer1"
                    android:textSize="30sp" />

            </LinearLayout>


            //Answer 2
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/textAnswer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="answer2"
                    android:textSize="30sp" />

            </LinearLayout>


            //Answer 3
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/textAnswer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="answer3"
                    android:textSize="30sp" />

            </LinearLayout>

            // Answer 4
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/textAnswer4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="answer4"
                    android:textSize="30sp" />
            </LinearLayout>

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:orientation="horizontal"
        android:paddingRight="20dp">

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btnNext_question"
        android:layout_gravity="right"
        android:onClick="onNextQuestionButtonClicked" >
    </Button>
</LinearLayout>
