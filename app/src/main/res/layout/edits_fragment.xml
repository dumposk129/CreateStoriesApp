<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_bar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Edit"
                android:textSize="30sp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal|top" />

            <ImageButton
                android:id="@+id/btnFloatingActionEditFragment"
                android:layout_width="@dimen/main_ring_button_diameter"
                android:layout_height="@dimen/main_ring_button_diameter"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="@dimen/add_button_margin"
                android:layout_marginEnd="@dimen/add_button_margin"
                android:tint="@android:color/white"
                android:background="@drawable/ring"
                android:src="@android:drawable/ic_input_add"
                android:elevation="@dimen/elevation_low"
                android:stateListAnimator="@anim/button_elevation"
                tools:ignore="RtlCompat"/>

        </FrameLayout>
    </RelativeLayout>


    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.dumposk129.create.stories.app.NavigationDrawerFragment"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer">
    </fragment>

</android.support.v4.widget.DrawerLayout>
